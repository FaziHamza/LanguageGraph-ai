    {
        "id": "form-completion-check",
        "name": "Form Completion Status",
        "enabled": true,
        "priority": 10,
        "conditions": {
            "logic": "all",
            "rules": [
                {
                    "field": "student.name",
                    "operator": "hasValue"
                },
                {
                    "field": "student.email",
                    "operator": "hasValue"
                },
                {
                    "field": "student.phone",
                    "operator": "hasValue"
                },
                {
                    "field": "student.dob",
                    "operator": "hasValue"
                },
                {
                    "field": "student.grade",
                    "operator": "hasValue"
                },
                {
                    "field": "student.address",
                    "operator": "hasValue"
                }
            ]
        },
        "actions": [
            {
                "type": "enable",
                "target": "submitButton",
                "options": {}
            },
            {
                "type": "addClass",
                "target": "submitButton",
                "value": "bg-green-600 hover:bg-green-700 text-white",
                "options": {}
            },
            {
                "type": "showMessage",
                "target": "formStatus",
                "value": "",
                "options": {
                    "content": "Form is ready to submit!",
                    "type": "success",
                    "position": "topRight",
                    "duration": 2000
                }
            }
        ]
    }
]
